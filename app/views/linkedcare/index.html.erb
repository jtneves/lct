<!-- Page Content -->
<div class="container-fluid">
  <div class="jumbotron">
    <form class="form-inline" id="linkedForm">
      
      <div class="form-group">
        <input class="form-control number" name="lnumber" id="lnumber" placeholder="Linked Number 1-9" <%if @lnumber%> value=<%=@lnumber%> <%end%>>
      </div>

      <div class="form-group">
        <input class="form-control number" name="cnumber" id="cnumber" placeholder="Care Number 1-9" <%if @cnumber%> value=<%=@cnumber%> <%end%>>
      </div>

      <input class="form-control" name="height" id="height" type="hidden" value="1">
      <input class="form-control" name="width" id="width" type="hidden" value= "2">

      <div class="form-group">
        <button id="submit" action="submit" class="btn btn-default" type="submit">Make it Happen</button>
      </div>

    </form>
  </div>

  <div class="well" id="result">
      <samp id="resultText">
        <%if @results%>
          <%=@results%>
        <%end%>
      </samp>
  </div>
</div>
<!-- /.container -->
